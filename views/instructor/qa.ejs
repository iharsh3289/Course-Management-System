<!-- courses -->
<section class="courses py-5">





    <!-- single page -->
    <div class="single-page py-5">
        <div class="container py-xl-5 py-lg-3">

            <div class="inner-sec">
                <div class="row">
                    <!-- left side -->
                    <div class="col-lg-8 left-blog-info text-left">
                        <div class="blog-grid-top">

                            <h2 class="tittle mb-xl-5 mb-4 text-dark text-uppercase font-weight-bold pl-4 py-3">Q&A  (Question And Answers)</h2>
                            <div class="category-story tech-btm"">
                            <ul class="list-group single" >


                              <!--  <script type="text/javascript">
                                    $(function() {
                                        $(".reply").click(function() {

                                            alert(this.id); // or alert($(this).attr('id'));
                                            $(this).css('visibility', 'visible');
                                        });
                                    });
                                </script>
-->

                                <% if (q) { %>
                                    <% for (var i=0;i<q.length ;i ++) {%>
                                        <li class="list-group-item" style="border-color: #0c5460 ">
                                            <a style="white-space: pre-wrap;"><h3 style="color: #007BFF">Question Asked By</h3> <%= q[i].Name%> <% if (q[i].Instructor_id != null){ %> ( Instructor )<% } %> <% if (q[i].Student_id != null){ %> ( Student )<% } %> <% if (q[i].Instructor_id === null && q[i].Student_id === null){ %> ( Annonymous )<% } %></a>
                                            <a style="white-space: pre-wrap;"><h3 style="color: #007BFF">Subject:</h3>   <%= q[i].Subject%></a>
                                            <a style="white-space: pre-wrap;"><h3 style="color: #007BFF">Question: </h3><%= q[i].Question%></a>
                                            <a style="white-space: pre-wrap;"><h3 style="color: #007BFF">Answers:</h3></a>
                                            <ul style="margin-left: 10%">

                                                <% if (a) { %>
                                                    <% for (var j=0;j < a.length; j ++) {%>
                                                        <% if (a[j].Q_A_id === q[i].Q_A_id) { %>
                                                        <div class="card">

                                                            <div class="card-body"><p style="white-space: pre-wrap;"><%= a[j].Answer%> <br><br> Answered By : <p style="color: #1da1f2"><%= a[j].Name %><% if (a[j].Instructor_id != null){ %> ( Instructor )<% } %> <% if (a[j].Student_id != null){ %> ( Student )<% } %> <% if (a[j].Instructor_id === null && a[j].Student_id === null){ %> ( Annonymous )<% } %></p> </p></div>

                                                            <% if (r) { %>
                                                                <% for (var k=0;k < r.length; k++) {%>

                                                                    <% if (r[k].Answer_id === a[j].Answer_id) { %>

                                                                        <div class="card" style="margin-left: 20%;margin-bottom: 5px;border:1px solid green">


                                                                               <div class="card-body align-right"><p style="white-space: pre-wrap;"><%= r[k].Reply%> <br><br> Replied By : <p style="color: #1da1f2"><%= r[k].Name %><% if (r[k].Instructor_id != null){ %> ( Instructor )<% } %> <% if (r[k].Student_id != null){ %> ( Student )<% } %> <% if (r[k].Instructor_id === null && r[k].Student_id === null){ %> ( Annonymous )<% } %></p></div>
                                                                        </div>
                                                                    <% }%>
                                                                <%}%>
                                                            <%}%>




                                                                            <div class="card-footer replydiv">
                                                            <div >
                                                                <form action="/instructor/course/<%= course.Course_id%>/<%=q[i].Q_A_id%>/<%= a[j].Answer_id%>" method="post">
                                                                    <div class="row">
                                                                    <div class="form-group col-lg-7" >
                                                                        <textarea class="form-control" name="answer" placeholder="Your reply..." required=""></textarea>
                                                                    </div>
                                                                    <div class="form-group col-lg-4">
                                                                        <label><h6 style="color: rgba(28,28,28,0.57); margin-top: 5px">Annonymous: </h6></label>           <input type="checkbox" checked name="type">
                                                                    </div>
                                                                        <div class="col-lg-1">
                                                                            <button type="submit" class="btn btn-primary submit " >Post</button>
                                                                        </div>

                                                                    </div>
                                                                </form>
                                                            </div>
                                                            </div>

                                                        </div><br>
                                                            <%} %>

                                                    <% }%>
                                                <% } %>

                                            </ul><br>


                                            <form action="/instructor/course/<%= course.Course_id%>/<%=q[i].Q_A_id%>/" method="post">
                                                <div class="form-group">
                                                    <textarea class="form-control" name="answer" placeholder="Your Answer..." required=""></textarea>
                                                </div>
                                                <div class="form-group">
                                                    <label><h3 style="color: rgba(28,28,28,0.57); margin-top: 5px">Make Annonymous  :   </h3></label>           <input type="checkbox" checked name="type">
                                                </div>
                                                <button type="submit" class="btn btn-primary submit" style="margin-left: 86%">Post</button>
                                            </form>
                                        </li><br><br>
                                    <% }%>
                                <% } %>



                            </ul>
                        </div>




                    </div>

                    <div class="comment-top">
                        <h4>Ask a Question</h4>
                        <div class="comment-bottom">
                            <form action="/instructor/course/<%= course.Course_id%>/qa" method="post">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="subject" placeholder="Subject" required="">
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" name="question" placeholder="Your Question..." required=""></textarea>
                                </div>
                                <div class="form-group">
                                    <label><h3 style="color: rgba(28,28,28,0.57); margin-top: 5px">Make Annonymous  :   </h3></label>           <input type="checkbox" checked name="type">
                                </div>

                                <button type="submit" class="btn btn-primary submit">Post</button>
                            </form>
                        </div>
                    </div>







            </div>




                <!-- //left side -->
                <!-- right side -->

                        <div class="tech-btm">
                            <img src="images/g4.jpg" class="img-fluid rounded" alt="">
                        </div>


                        <div class="category-story tech-btm">
                            <h4>Course Materials</h4>
                            <ul class="list-group single">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <a href="/instructor/course/<%= course.Course_id%>/resources">Resources Section</a>
