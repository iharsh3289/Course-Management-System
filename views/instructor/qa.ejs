                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <a href="/instructor/course/<%= course.Course_id%>/students">Students</a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <a href="/instructor/course/<%= course.Course_id%>/qa">Q&A</a>
                                </li>
                            </ul>
                        </div>


                    </div>
                </aside>
                <!-- //right side -->
            </div>
        </div>
